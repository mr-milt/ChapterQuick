{
    "manifest_version": 3,
    "name": "ChapterQuick",
    "version": "1.2",
    "description": "Navigate to the next chapter on spesific websites made easier.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["js/content.js"]
      }
    ],
    "action": {
      "default_popup": "html/ChapterQuick.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  
